<%= simple_form_for(@contact_info) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :address_1 %>
    <%= f.input :address_2 %>
    <%= f.input :suburb %>
    <%= f.input :postcode %>
    <%= f.input :country %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :linkedin %>
    <%= f.input :twitter %>
    <%= f.input :blog %>
    <%= f.input :profile_pic %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
