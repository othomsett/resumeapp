<%= simple_form_for(@reference) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :referee_name %>
    <%= f.input :comany %>
    <%= f.input :referee_position %>
    <%= f.input :years_known %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :linkedin %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
